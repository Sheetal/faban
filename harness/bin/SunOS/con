#! /bin/sh -
#
# Check if there is no argument then exit
# 
if [ "$#" -ne 1 ]
then
	echo "Usage: con machine"   
	exit 1
fi
#
# define variable machine
machine=`grep -w $1 /net/paejs/export/home/master.tc | awk '{ print $2, $3 }'`
#
if [ -z "$machine" ]
then
	echo " $1 is not in the masterfile of paejs"
else
	telnet $machine
	exit
fi

machine=`grep -w $1 /net/midas/export/home/master.tc | awk '{ print $2, $3 }'`
#
if [ -z "$machine" ]
then
	echo " $1 is not in the masterfile of midas"
else
	telnet $machine
	exit
fi

