#!/bin/sh

BINDIR=`dirname $0`

if [ -n "$BINDIR" ] ; then
    FABAN_HOME=`cd $BINDIR/.. > /dev/null 2>&1 && pwd`
    XANADU_HOME=`cd $FABAN_HOME/master/webapps/xanadu/scripts > /dev/null 2>&1 && pwd`
    export FABAN_HOME XANADU_HOME
fi


XANADU_HOST=localinstance
export XANADU_HOST

LOG_FILE=/net/romulus.sfbay/export/home/xanadu2/usage-log/log

if [ -w $LOG_FILE ] ; then
    who am i | awk '{print $3, $4, $5, $1};' >> $LOG_FILE
    uname -a | awk '{print $2, $3, $5};' >> $LOG_FILE
fi

if [ -n "$JAVA_HOME" ] ; then
    PATH=$JAVA_HOME/bin:$PATH
    export PATH
fi

# Check and rename tool output that is not supposed to be .xan.
# Some older versions still use old format and should be named .log.
if [ $1 = "import" ] ; then
    IMPORTDIR="$2"
    cd ${IMPORTDIR}
            
    # For this trick, we need nawk or gawk.
    # Plain old awk usually does not work.
    # But we still fall back to it if
    # everything else falls apart.
    AWK=/usr/bin/awk
    if [ -x "/usr/bin/nawk" ] ; then
        AWK=/usr/bin/nawk
    elif [ -x "/usr/bin/gawk" ] ; then
        AWK=/usr/bin/gawk
    fi

    for i in *.xan.*
    do
        XANHEADER=`head -1 $i | ${AWK} { print $1 }`
        if [ "${XANHEADER}" != "Title:" ] ; then
            TOOL=`echo $i | ${AWK} -F ".xan." ' { print $1 }'`
            HOST=`echo $i | ${AWK} -F ".xan." ' { print $2 }'`
            mv $i ${TOOL}.log.${HOST}
        fi 
    done
fi

perl -w $XANADU_HOME/xanadu.pl $*
